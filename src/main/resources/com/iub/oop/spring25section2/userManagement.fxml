      </TextField>
      <TextField fx:id="passwordTF" layoutX="27.0" layoutY="100.0" promptText="Password">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <ComboBox fx:id="userTypeCB" layoutX="27.0" layoutY="175.0" prefWidth="150.0" promptText="Select User Type" />
